    {
      "name": "Electron: Main (from .env file)",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/electron-transcribe",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["start"],
      "envFile": "${workspaceFolder}/electron-transcribe/.env",
      "outputCapture": "std",
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"]
    }
  ],
  "compounds": []
}

